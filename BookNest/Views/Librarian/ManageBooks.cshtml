@model List<Book>

@{
    ViewBag.Title = "Manage Books";
}


<div class="container mt-5">
    <h2>Manage Books</h2>
    <a class="btn btn-success mb-3" href="@Url.Action("CreateBook", "Librarian")">Add New Book</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year Published</th>
                <th>ISBN</th>
                <th>Total Copies</th>
                <th>Available Copies</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.YearPublished</td>
                    <td>@book.ISBN</td>
                    <td>@book.TotalCopies</td>
                    <td>@book.CopiesAvailable</td>
                    <td>
                        <a href="@Url.Action("EditBook", "Librarian", new { id = book.BookId })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("DeleteBook", "Librarian", new { id = book.BookId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
